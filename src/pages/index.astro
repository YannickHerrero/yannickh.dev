---
import BaseLayout from "../layouts/BaseLayout.astro";
import Container from "../components/Container.astro";
import SectionIntro from "../components/SectionIntro.astro";
import About from "../components/About.astro";
import ProjectCatalog from "../components/react/ProjectCatalog";
import type { ProjectsIndex, ProfileIndex } from "../types";

// Import generated data
let projectsData: ProjectsIndex;
let profileData: ProfileIndex;

try {
  projectsData = await import("../generated/projects.json");
} catch {
  projectsData = {
    projects: [],
    allTags: [],
    generatedAt: new Date().toISOString(),
  };
}

try {
  profileData = await import("../generated/profile.json");
} catch {
  profileData = {
    profile: null,
    fetchedAt: new Date().toISOString(),
  };
}

const { projects } = projectsData;
const { profile } = profileData;
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <Container class="mt-24 sm:mt-32 md:mt-56">
    <div class="max-w-3xl">
      <h1
        class="font-display text-5xl font-medium tracking-tight text-balance text-neutral-950 sm:text-7xl"
      >
        Hi, I'm Yannick.
      </h1>
      <p class="mt-6 text-xl text-neutral-600">
        Freelance dev based in France, obsessed with building things and learning new stuff.
      </p>
    </div>
  </Container>

  <!-- Projects Section -->
  <Container class="mt-24 sm:mt-32 lg:mt-40">
    {
      projects.length > 0 ? (
        <>
          <SectionIntro title="Projects">
            <p>A collection of my open source work.</p>
          </SectionIntro>
          <div class="mt-16">
            <ProjectCatalog client:load projects={projects} />
          </div>
        </>
      ) : (
        <div class="mx-auto max-w-lg rounded-3xl bg-neutral-50 p-12 text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-neutral-200">
            <svg
              class="h-6 w-6 text-neutral-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z"
              />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-semibold text-neutral-950">
            No projects yet
          </h3>
          <p class="mt-2 text-sm text-neutral-600">
            Run{" "}
            <code class="rounded-md bg-neutral-100 px-2 py-0.5 font-mono text-xs text-neutral-700">
              bun run sync:github
            </code>{" "}
            to fetch projects from GitHub.
          </p>
        </div>
      )
    }
  </Container>

  <!-- About Section (from GitHub profile) -->
  <About profile={profile} />

  <!-- Spacer before footer -->
  <div class="mt-24 sm:mt-32 lg:mt-40"></div>
</BaseLayout>
