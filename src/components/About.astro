---
import type { Profile } from "../types";

interface Props {
  profile: Profile | null;
}

const { profile } = Astro.props;

// Extract a brief bio from the README (first paragraph after any badges/images)
function extractBio(readme: string): string {
  if (!readme) return "";

  // Remove badges and images at the start
  const lines = readme.split("\n");
  let startIndex = 0;

  for (let i = 0; i < lines.length; i++) {
    const line = lines[i].trim();
    // Skip empty lines, badges, images, and headings at the start
    if (
      !line ||
      line.startsWith("![") ||
      line.startsWith("<img") ||
      line.startsWith("<p") ||
      line.startsWith("<div") ||
      line.startsWith("<!--") ||
      line.startsWith("#")
    ) {
      startIndex = i + 1;
      continue;
    }
    // Found actual content
    break;
  }

  // Get first meaningful paragraph
  const contentLines = lines.slice(startIndex);
  const paragraphs = contentLines.join("\n").split(/\n\n+/);

  for (const para of paragraphs) {
    const cleaned = para
      .trim()
      .replace(/!\[[^\]]*\]\([^)]*\)/g, "") // Remove images
      .replace(/<[^>]+>/g, "") // Remove HTML tags
      .replace(/\[([^\]]+)\]\([^)]+\)/g, "$1") // Convert links to text
      .replace(/[*_~`]/g, "") // Remove markdown formatting
      .trim();

    if (cleaned.length > 50) {
      // Return first 2-3 sentences or 300 chars
      const sentences = cleaned.match(/[^.!?]+[.!?]+/g);
      if (sentences && sentences.length > 2) {
        return sentences.slice(0, 3).join(" ").trim();
      }
      return cleaned.slice(0, 300) + (cleaned.length > 300 ? "..." : "");
    }
  }

  return "";
}

const bio = profile ? extractBio(profile.readme) : null;
---

{
  bio && (
    <div class="mt-24 rounded-4xl bg-neutral-950 py-24 sm:mt-32 lg:mt-40 lg:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:max-w-none">
          <div class="max-w-3xl">
            <h2 class="font-display text-3xl font-medium tracking-tight text-white sm:text-4xl">
              About
