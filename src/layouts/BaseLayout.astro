---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A curated collection of open source projects" } =
  Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#24273A" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Yannick Herrero</title>
  </head>
  <body class="min-h-screen bg-base">
    <!-- Gradient overlay -->
    <div
      class="hero-gradient pointer-events-none fixed inset-0 z-0"
      aria-hidden="true"
    >
    </div>

    <div class="relative z-10">
      <header
        class="sticky top-0 z-50 border-b border-overlay-0/20 bg-mantle/80 backdrop-blur-xl"
      >
        <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
          <div class="flex h-16 items-center justify-between">
            <a href="/" class="group flex items-center gap-3">
              <div
                class="flex h-8 w-8 items-center justify-center rounded-lg border border-overlay-0/30 bg-surface-0 transition-colors group-hover:bg-surface-1"
              >
                <svg
                  class="h-4 w-4 text-text-light"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z"
                  ></path>
                </svg>
              </div>
              <span class="text-lg font-bold text-text-light"
                >Yannick Herrero</span
              >
            </a>
            <div class="flex items-center gap-4">
              <!-- Search Input -->
              <div class="relative hidden sm:block">
                <svg
                  class="absolute left-3 top-1/2 h-4 w-4 -translate-y-1/2 text-overlay-2"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                  ></path>
                </svg>
                <input
                  type="text"
                  id="header-search"
                  placeholder="Search projects..."
                  class="w-64 rounded-lg border border-overlay-0/30 bg-surface-0 py-2 pl-10 pr-4 text-sm text-text transition-all duration-200 placeholder:text-overlay-2 focus:border-accent/50 focus:bg-surface-1 focus:outline-none"
                />
              </div>
              <a
                href="https://github.com/YannickHerrero"
                target="_blank"
                rel="noopener noreferrer"
                class="flex h-9 w-9 items-center justify-center rounded-lg text-subtext-0 transition-colors hover:bg-surface-0 hover:text-text-light"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    fill-rule="evenodd"
                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </header>

      <main>
        <slot />
      </main>

      <footer class="mt-auto border-t border-overlay-0/20 py-8">
        <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
          <p class="text-center text-sm text-subtext-0">
            Built with <a
              href="https://astro.build"
              class="text-subtext-1 transition-colors hover:text-text-light"
              >Astro</a
            >
            <span class="mx-2 text-overlay-0">&middot;</span>
            Data synced from GitHub
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
